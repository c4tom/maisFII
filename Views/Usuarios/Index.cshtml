@model IEnumerable<MaisFII.Models.Usuario>

@{
    ViewData["Title"] = "Índice";
}

<h1>Index</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Novo Registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome) /<br />
                @Html.DisplayNameFor(model => model.Email) <br />
                @Html.DisplayNameFor(model => model.Celular)

            </th>

            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                Endereço
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)<br />
                @Html.DisplayFor(modelItem => item.Email)<br />
                @Html.DisplayFor(modelItem => item.Celular)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Cpf)
            </td>
             <td>
                 Logradouro: @Html.DisplayFor(modelItem => item.Logradouro)<br />
                 Cep: @Html.DisplayFor(modelItem => item.Cep)<br />
                 Bairro: @Html.DisplayFor(modelItem => item.Bairro)<br />
                 Localidade: @Html.DisplayFor(modelItem => item.Localidade)<br />
                 Uf: @Html.DisplayFor(modelItem => item.Uf)
             </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.UsuarioId">Editar</a> |
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.UsuarioId">Detalhes</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.UsuarioId">Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>
