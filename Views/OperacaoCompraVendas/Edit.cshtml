@model MaisFII.Models.OperacaoCompraVenda
@using MaisFII.Models.Enums

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>OperacaoCompraVenda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OperacaoCompraVendaId" />
            <div class="form-group">
                <label asp-for="DataOperacao" class="control-label"></label>
                <input asp-for="DataOperacao" class="form-control" />
                <span asp-validation-for="DataOperacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantidadeCota" class="control-label"></label>
                <input asp-for="QuantidadeCota" class="form-control" />
                <span asp-validation-for="QuantidadeCota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorDaCota" class="control-label"></label>
                <input asp-for="ValorDaCota" class="form-control" />
                <span asp-validation-for="ValorDaCota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorTaxaDaOperadora" class="control-label"></label>
                <input asp-for="ValorTaxaDaOperadora" class="form-control" />
                <span asp-validation-for="ValorTaxaDaOperadora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tipo" class="control-label"></label>
                <select asp-for="tipo" asp-items="@Html.GetEnumSelectList<OperacaoTipoEnum>()" class="form-control">
                    <option> -- SELECIONE -- </option>
                </select>
                <span asp-validation-for="tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Carteira" class="control-label"></label>
                <select asp-for="Carteira" class="form-control" asp-items="@ViewBag.Carteira">
                    <option> -- SELECIONE -- </option>
                </select>
                <span asp-validation-for="Carteira" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fundo" class="control-label"></label>
                <select asp-for="Fundo" class="form-control" asp-items="@ViewBag.Fundo">
                    <option> -- SELECIONE -- </option>
                </select>
                <span asp-validation-for="Fundo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="" asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
