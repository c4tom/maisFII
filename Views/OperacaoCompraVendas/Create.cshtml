@model MaisFII.Models.OperacaoCompraVenda
@using MaisFII.Models.Enums
@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar</h1>

<h4>OperacaoCompraVenda</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DataOperacao" class="control-label"></label>
                <input type="date" asp-for="DataOperacao" class="form-control" />
                <span asp-validation-for="DataOperacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantidadeCota" class="control-label"></label>
                <input asp-for="QuantidadeCota" class="form-control" />
                <span asp-validation-for="QuantidadeCota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorDaCota" class="control-label"></label>
                <input asp-for="ValorDaCota" class="form-control" />
                <span asp-validation-for="ValorDaCota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorTaxaDaOperadora" class="control-label"></label>
                <input asp-for="ValorTaxaDaOperadora" class="form-control" />
                <span asp-validation-for="ValorTaxaDaOperadora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tipo" class="control-label"></label>
                <select asp-for="tipo" asp-items="@Html.GetEnumSelectList<OperacaoTipoEnum>()" class="form-control">
                    <option> -- SELECIONE -- </option>
                </select>
                <span asp-validation-for="tipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarteiraId" class="control-label"></label>
                <select asp-for="CarteiraId" class="form-control" asp-items="ViewBag.CarteiraId">
                <option> -- SELECIONE -- </option></select>
            </div>
            <div class="form-group">
                <label asp-for="FundoId" class="control-label"></label>
                <select asp-for="FundoId" class="form-control" asp-items="ViewBag.FundoId">
                    <option> -- SELECIONE -- </option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Adicionar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="" asp-action="Index">Voltar para Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
