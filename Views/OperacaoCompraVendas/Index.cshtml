@model IEnumerable<MaisFII.Models.OperacaoCompraVenda>

@{
    ViewData["Title"] = "Índice";
}

<h1>Index</h1>

<p>
    <a class="btn btn-success" asp-action="Create">Novo Registro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th title="@Html.DisplayNameFor(model => model.DataOperacao)">
                Data
            </th>
            <th title="@Html.DisplayNameFor(model => model.QuantidadeCota)">
                Cota
            </th>
            <th title="@Html.DisplayNameFor(model => model.ValorDaCota)">
                Vl. Cota
            </th>
            <th title="@Html.DisplayNameFor(model => model.ValorTaxaDaOperadora)">
                Taxa
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Carteira)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fundo)
            </th>
            <th>Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DataOperacao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QuantidadeCota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorDaCota)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorTaxaDaOperadora)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carteira.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fundo.Sigla)
            </td>
            <td>
                @{
                    double subtotal = (item.QuantidadeCota * item.ValorDaCota) - item.ValorTaxaDaOperadora;
                }
                @subtotal.ToString("C2")
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.OperacaoCompraVendaId">Editar</a> |
                <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.OperacaoCompraVendaId">Detalhes</a> |
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.OperacaoCompraVendaId">Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>
